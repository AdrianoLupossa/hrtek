
$create-new-size = 300px;

.create-new {
	width: $create-new-size;
	height: $create-new-size - 100px;
	background-color: #fff;
	box-shadow: 5px 5px 5rem #bbb;
	border-radius: 3px;
	transform: translate(-50%, -50%)
	left: 50%;
	top: 40%;
	position: absolute;
	z-index: 1;
	
	&__label {
		padding: 1rem;
		font-size: 1.2em;
		text-transform: uppercase;
		display: block;
		text-align: center;
		padding-bottom: 0.5rem;
		border-bottom: 1px solid #ddd;
	}
	
	&__list {
		list-style: none;
		&--item {
			font-size: 1em;
			font-weight: 400;
			cursor: pointer;
			padding: 1rem;
			display: block;
			&:hover {
				background-color: #333;
				color: #fff;
			}
		}
	}

}