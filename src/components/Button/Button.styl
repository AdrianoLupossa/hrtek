
$bg-light = #f3f3f3;

button {
	padding: 0.7rem;
	font-size: 1em;
	width: 100px;
	border: 1px solid #ddd;
	background-image: linear-gradient($bg-light, #f9f9f9);
	box-shadow: 1px 1px 10px #ddd;
	border-radius: 3px;
	cursor: pointer;
	outline: none;
	&:hover {
		background: #f2f2f2;
	}
	&:active {
		box-shadow: 1px 0 1px #eee;
		background: #f0f0f0;
	}
}