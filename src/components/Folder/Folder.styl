
$folder-size = 120px;
$folder-color = #649aff;

.folder {
	
	padding: 1rem;
	cursor: default;
	-webkit-user-select: none;
	
	&:not(&--active):hover {
		background-color: rgba($folder-color, 0.2);
		border-radius: 3px;
	}
	
	&--active {
		border-radius: 3px;
		background-color: rgba($folder-color, .5);
		color: #fff;
		& .folder__icon {
			box-shadow: none;
		}
	}

	&__icon {
		height: $folder-size - 20px;
		margin-bottom: 5px;
		width: $folder-size;
		display: block;
		background: $folder-color;
		box-shadow: 2px 2px 10px #ccc;
		border-radius: 40px 0 0 0;
	}
	
	&__label {
		width: $folder-size;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
		display: block;
		text-align: left;
		font-size: 1em;
		font-family: verdana;
	}

}